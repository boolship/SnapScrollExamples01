        <ScrollViewer x:Name="NormalScrollViewerX"
                      Grid.Row="2"
                      Grid.Column="2"
                      Visibility="Collapsed"
                      Style="{StaticResource MyVerticalScrollViewerStyle}">
            <ScrollContentPresenter x:Name="SnappingScrollContentPresenter"
                                    Style="{StaticResource MyScrollContentPresenterStyle}">
                <ItemsControl x:Name="MyItemsControlX" Style="{StaticResource MyItemsControlStyle}">

                    <Rectangle Style="{StaticResource MyRectangleStyle}"/>
                    <Rectangle Style="{StaticResource MyRectangleStyle}"/>
                    <Rectangle Style="{StaticResource MyRectangleStyle}"/>
                    <Rectangle Style="{StaticResource MyRectangleStyle}"/>
                    <Rectangle Style="{StaticResource MyRectangleStyle}"/>

                    <Rectangle Style="{StaticResource MyRectangleStyle}"/>
                    <Rectangle Style="{StaticResource MyRectangleStyle}"/>
                    <Rectangle Style="{StaticResource MyRectangleStyle}"/>
                    <Rectangle Style="{StaticResource MyRectangleStyle}"/>
                    <Rectangle Style="{StaticResource MyRectangleStyle}"/>

                    <Rectangle Style="{StaticResource MyRectangleStyle}"/>
                    <Rectangle Style="{StaticResource MyRectangleStyle}"/>
                    <Rectangle Style="{StaticResource MyRectangleStyle}"/>
                    <Rectangle Style="{StaticResource MyRectangleStyle}"/>
                    <Rectangle Style="{StaticResource MyRectangleStyle}"/>
                </ItemsControl>
            </ScrollContentPresenter>
        </ScrollViewer>
