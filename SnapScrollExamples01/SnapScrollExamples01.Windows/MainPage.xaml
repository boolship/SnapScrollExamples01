<Page
    x:Class="SnapScrollExamples01.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SnapScrollExamples01"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.Resources>

        <!--GridView-->
        <Style x:Key="MyGridViewTileStyle"  TargetType="GridViewItem">
            <Setter Property="FontFamily" Value="Segoe UI" />
            <Setter Property="Background" Value="DarkOliveGreen" />
            <Setter Property="Height" Value="120" />
            <Setter Property="Width" Value="200" />
            <Setter Property="Padding" Value="0" />
            <Setter Property="Margin" Value="0,0,8,8" />
            <Setter Property="HorizontalContentAlignment" Value="Center" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="TabNavigation" Value="Local" />
            <!--<Setter Property="Height" Value="300" />
            <Setter Property="Width" Value="500" />-->
        </Style>
        <DataTemplate x:Key="MyGridViewTileTemplate">
            <Rectangle x:Name="ItemRectangle"
                       Fill="Coral"
                       Height="80" Width="160"
                       />
            <!--Height="200" Width="400"-->
        </DataTemplate>

        <!--ListView-->
        <Style x:Key="MyListViewTileStyle"  TargetType="ListViewItem">
            <Setter Property="FontFamily" Value="Segoe UI" />
            <Setter Property="Background" Value="DarkOliveGreen" />
            <Setter Property="Height" Value="300" />
            <Setter Property="Width" Value="500" />
            <Setter Property="Padding" Value="0" />
            <Setter Property="Margin" Value="0,0,8,8" />
            <Setter Property="HorizontalContentAlignment" Value="Center" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="TabNavigation" Value="Local" />
            <!--<Setter Property="Height" Value="120" />
            <Setter Property="Width" Value="200" />-->
        </Style>
        <DataTemplate x:Key="MyListViewTileTemplate">
            <Rectangle x:Name="ItemRectangle"
                       Fill="Coral"
                       Height="200" Width="400"
                       />
            <!--Height="80" Width="160"-->
        </DataTemplate>

        <!--FlipView-->
        <Style x:Key="MyFlipViewTileStyle" TargetType="FlipViewItem">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="Background" Value="DarkOliveGreen"/>
            <Setter Property="Height" Value="300" />
            <Setter Property="Width" Value="500" />
            <Setter Property="Padding" Value="0" />
            <Setter Property="Margin" Value="0,0,8,8" />
            <Setter Property="HorizontalContentAlignment" Value="Center" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="TabNavigation" Value="Local" />
            <!--<Setter Property="Height" Value="120" />
            <Setter Property="Width" Value="200" />-->
        </Style>
        <DataTemplate x:Key="MyFlipViewTileTemplate">
            <Rectangle x:Name="ItemRectangle"
                       Fill="Coral"
                       Height="200" Width="400"
                       />
            <!--Height="80" Width="160"-->
        </DataTemplate>

        <!--#1 ScrollViewer-->
        <Style x:Key="MyScrollViewerStyle" TargetType="ScrollViewer">
            <Setter Property="Background" Value="{StaticResource ApplicationPageBackgroundThemeBrush}"/>
            <Setter Property="BorderBrush" Value="DeepPink"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="ZoomMode" Value="Disabled"/>
            <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
            <Setter Property="HorizontalScrollBarVisibility" Value="Auto"/>
            <Setter Property="VerticalScrollMode" Value="Enabled"/>
            <Setter Property="HorizontalScrollMode" Value="Disabled"/>
        </Style>
        
        <!--#2 ItemsControl-->
        <Style x:Key="MyItemsControlStyle" TargetType="ItemsControl">
            <Setter Property="Width" Value="500" />
            <Setter Property="HorizontalAlignment" Value="Center" />
        </Style>

        <Style x:Key="MyHorizontalItemsControlStyle" TargetType="ItemsControl">
            <Setter Property="Height" Value="300" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="ItemsPanel">
                <Setter.Value>
                    <ItemsPanelTemplate>
                        <VirtualizingStackPanel Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!--#3 Rectangle-->
        <Style x:Key="MyRectangleStyle" TargetType="Rectangle">
            <Setter Property="Fill" Value="Coral" />
            <Setter Property="Height" Value="200" />
            <Setter Property="Width" Value="400" />
            <!--<Setter Property="Height" Value="300"/>
            <Setter Property="Width" Value="500"/>-->

            <Setter Property="Margin" Value="0,0,8,8" />
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>
        
        <Style x:Key="MyVerticalScrollViewerStyle" TargetType="ScrollViewer">
            <Setter Property="Background" Value="{StaticResource ApplicationPageBackgroundThemeBrush}"/>
            <Setter Property="BorderBrush" Value="DeepPink"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="ZoomMode" Value="Disabled"/>

            <Setter Property="VerticalScrollMode" Value="Enabled"/>
            <Setter Property="VerticalSnapPointsAlignment" Value="Near"/>
            <Setter Property="VerticalSnapPointsType" Value="MandatorySingle"/>
        </Style>
        
        <Style x:Key="MyScrollContentPresenterStyle" TargetType="ScrollContentPresenter">
            <Setter Property="ScrollViewer.ZoomMode" Value="Disabled"/>
        </Style>
        
        <Style x:Key="MyItemsPanelStyle" TargetType="ItemsStackPanel">
            <Setter Property="ScrollViewer.ZoomMode" Value="Disabled"/>
        </Style>
        
        <Style x:Key="MyItemsControlStyleX" TargetType="ItemsControl">
            <!--<Setter Property="ItemsPanel" Value="{StaticResource MyItemsPanelStyle}"/>-->
            <!--<Setter Property="ItemsPanel">
                <Setter.Value>
                    <ItemsPanelTemplate x:Name="SnappingItemsPanel">
                        --><!--<ItemsControl x:Name="SnappingItemsControl"/>-->
                        <!--<ItemsPresenter x:Name="SnappingItemsPresenter"/>-->
                        <!--<StackPanel x:Name="SnappingStackPanel"
                                    ScrollViewer.ZoomMode="Disabled"/>--><!--
                        <VirtualizingStackPanel x:Name="SnappingVirtualizingStackPanel"
                                                ScrollViewer.ZoomMode="Disabled"/>
                    </ItemsPanelTemplate>
                </Setter.Value>
            </Setter>-->
            <!--<Setter Property="ScrollViewer.ZoomMode" Value="Disabled"/>-->
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ItemsControl">
                        <!--<ItemsPresenter x:Name="SnappingItemsPresenter" 
                                        ScrollViewer.VerticalScrollMode="Disabled" 
                                        ScrollViewer.ZoomMode="Disabled"/>-->
                        <!--<StackPanel x:Name="SnappingStackPanel"/>-->
                        <!--<ScrollViewer x:Name="SnappingScrollViewer"
                                      Width="500" Height="500"
                                      Style="{StaticResource MyVerticalScrollViewerStyle}"/>-->
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>
    
    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <!--NormalGridView     (L-R) :: NormalListView         (U-D) :: NormalFlipView (L-R)
            VerticalGridView   (U-D) :: HorizontalListView     (L-R) :: VerticalFlipView (U-D)
            NormalScrollViewer (U-D) :: HorizontalScrollViewer (L-R) :: CustomFlipView (L-R)
            SnappingGridView   (L-R) :: SnappingListView       (U-D) :: SnappingScrollViewer (U-D)
        -->
        <!--GridView-->
        <GridView x:Name="NormalGridView"
                  Grid.Row="0"
                  Grid.Column="0"
                  Visibility="Visible"
                  ItemTemplate="{StaticResource MyGridViewTileTemplate}"
                  ItemContainerStyle="{StaticResource MyGridViewTileStyle}"
                  Background="{StaticResource ApplicationPageBackgroundThemeBrush}"
                  BorderBrush="DeepPink"
                  BorderThickness="2"
                  ShowsScrollingPlaceholders="False"
                  ScrollViewer.VerticalScrollBarVisibility="Auto"
                  ScrollViewer.HorizontalScrollBarVisibility="Auto"
                  ScrollViewer.VerticalScrollMode="Disabled"
                  ScrollViewer.HorizontalScrollMode="Enabled"
                  SelectionMode="None">
            <GridView.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapGrid Orientation="Vertical" />
                </ItemsPanelTemplate>
            </GridView.ItemsPanel>
        </GridView>

        <!--GridView-->
        <GridView x:Name="VerticalGridView"
                  Grid.Row="1"
                  Grid.Column="0"
                  Visibility="Visible"
                  ItemTemplate="{StaticResource MyGridViewTileTemplate}"
                  ItemContainerStyle="{StaticResource MyGridViewTileStyle}"
                  Background="{StaticResource ApplicationPageBackgroundThemeBrush}"
                  BorderBrush="DeepPink"
                  BorderThickness="2"
                  ShowsScrollingPlaceholders="False"
                  ScrollViewer.VerticalScrollBarVisibility="Auto"
                  ScrollViewer.HorizontalScrollBarVisibility="Auto"
                  ScrollViewer.VerticalScrollMode="Enabled"
                  ScrollViewer.HorizontalScrollMode="Disabled"
                  SelectionMode="None">
            <GridView.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapGrid Orientation="Horizontal" />
                </ItemsPanelTemplate>
            </GridView.ItemsPanel>
        </GridView>

        <!--ListView-->
        <ListView x:Name="NormalListView"
                  Grid.Row="0"
                  Grid.Column="1"
                  Visibility="Visible"
                  ItemTemplate="{StaticResource MyListViewTileTemplate}"
                  ItemContainerStyle="{StaticResource MyListViewTileStyle}"
                  Background="{StaticResource ApplicationPageBackgroundThemeBrush}"
                  BorderBrush="DeepPink"
                  BorderThickness="2"
                  ShowsScrollingPlaceholders="False"
                  ScrollViewer.VerticalScrollBarVisibility="Auto"
                  ScrollViewer.HorizontalScrollBarVisibility="Auto"
                  ScrollViewer.VerticalScrollMode="Enabled"
                  ScrollViewer.HorizontalScrollMode="Disabled"
                  SelectionMode="None">
        </ListView>

        <!--ListView-->
        <ListView x:Name="HorizontalListView"
                  Grid.Row="1"
                  Grid.Column="1"
                  Visibility="Visible"
                  ItemTemplate="{StaticResource MyListViewTileTemplate}"
                  ItemContainerStyle="{StaticResource MyListViewTileStyle}"                  
                  Background="{StaticResource ApplicationPageBackgroundThemeBrush}"
                  BorderBrush="DeepPink"
                  BorderThickness="2"
                  ShowsScrollingPlaceholders="False"
                  ScrollViewer.VerticalScrollBarVisibility="Auto"
                  ScrollViewer.HorizontalScrollBarVisibility="Auto"
                  ScrollViewer.VerticalScrollMode="Disabled"
                  ScrollViewer.HorizontalScrollMode="Enabled"
                  SelectionMode="None">
            <ListView.ItemsPanel>
                <ItemsPanelTemplate>
                    <VirtualizingStackPanel Orientation="Horizontal"/>
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>
        </ListView>

        <!--FlipView-->
        <FlipView x:Name="NormalFlipView"
                  Grid.Row="0"
                  Grid.Column="2"
                  Visibility="Visible"
                  ItemTemplate="{StaticResource MyFlipViewTileTemplate}"
                  ItemContainerStyle="{StaticResource MyFlipViewTileStyle}"
                  Background="{StaticResource ApplicationPageBackgroundThemeBrush}"
                  BorderBrush="DeepPink"
                  BorderThickness="2"
                  ScrollViewer.VerticalScrollBarVisibility="Auto"
                  ScrollViewer.HorizontalScrollBarVisibility="Auto"
                  ScrollViewer.VerticalScrollMode="Disabled"
                  ScrollViewer.HorizontalScrollMode="Enabled">
        </FlipView>

        <!--FlipView-->
        <FlipView x:Name="VerticalFlipView"
                  Grid.Row="1"
                  Grid.Column="2"
                  Visibility="Visible"
                  ItemTemplate="{StaticResource MyFlipViewTileTemplate}"
                  ItemContainerStyle="{StaticResource MyFlipViewTileStyle}"
                  Background="{StaticResource ApplicationPageBackgroundThemeBrush}"
                  BorderBrush="DeepPink"
                  BorderThickness="2"
                  ScrollViewer.VerticalScrollBarVisibility="Auto"
                  ScrollViewer.HorizontalScrollBarVisibility="Auto"
                  ScrollViewer.VerticalScrollMode="Enabled"
                  ScrollViewer.HorizontalScrollMode="Disabled">
            <FlipView.ItemsPanel>
                <ItemsPanelTemplate>
                    <VirtualizingStackPanel Orientation="Vertical"/>
                </ItemsPanelTemplate>
            </FlipView.ItemsPanel>
        </FlipView>

        <!--ScrollViewer-->
        <ScrollViewer x:Name="NormalScrollViewer"
                      Grid.Row="2"
                      Grid.Column="0"
                      Visibility="Visible"
                      Style="{StaticResource MyScrollViewerStyle}">
            <ItemsControl x:Name="MyItemsControl" Style="{StaticResource MyItemsControlStyle}">
                <Rectangle Style="{StaticResource MyRectangleStyle}"/>
                <Rectangle Style="{StaticResource MyRectangleStyle}"/>
                <Rectangle Style="{StaticResource MyRectangleStyle}"/>
                <Rectangle Style="{StaticResource MyRectangleStyle}"/>
                <Rectangle Style="{StaticResource MyRectangleStyle}"/>

                <Rectangle Style="{StaticResource MyRectangleStyle}"/>
                <Rectangle Style="{StaticResource MyRectangleStyle}"/>
                <Rectangle Style="{StaticResource MyRectangleStyle}"/>
                <Rectangle Style="{StaticResource MyRectangleStyle}"/>
                <Rectangle Style="{StaticResource MyRectangleStyle}"/>

                <Rectangle Style="{StaticResource MyRectangleStyle}"/>
                <Rectangle Style="{StaticResource MyRectangleStyle}"/>
                <Rectangle Style="{StaticResource MyRectangleStyle}"/>
                <Rectangle Style="{StaticResource MyRectangleStyle}"/>
                <Rectangle Style="{StaticResource MyRectangleStyle}"/>
            </ItemsControl>
        </ScrollViewer>

        <!--ScrollViewer-->
        <ScrollViewer x:Name="HorizontalScrollViewer"
                      Grid.Row="2"
                      Grid.Column="1"
                      Visibility="Visible"
                      Style="{StaticResource MyScrollViewerStyle}"
                      VerticalScrollMode="Disabled"
                      HorizontalScrollMode="Enabled">
            <ItemsControl x:Name="MyHorizontalItemsControl" Style="{StaticResource MyHorizontalItemsControlStyle}">
                <Rectangle Style="{StaticResource MyRectangleStyle}"/>
                <Rectangle Style="{StaticResource MyRectangleStyle}"/>
                <Rectangle Style="{StaticResource MyRectangleStyle}"/>
                <Rectangle Style="{StaticResource MyRectangleStyle}"/>
                <Rectangle Style="{StaticResource MyRectangleStyle}"/>

                <Rectangle Style="{StaticResource MyRectangleStyle}"/>
                <Rectangle Style="{StaticResource MyRectangleStyle}"/>
                <Rectangle Style="{StaticResource MyRectangleStyle}"/>
                <Rectangle Style="{StaticResource MyRectangleStyle}"/>
                <Rectangle Style="{StaticResource MyRectangleStyle}"/>

                <Rectangle Style="{StaticResource MyRectangleStyle}"/>
                <Rectangle Style="{StaticResource MyRectangleStyle}"/>
                <Rectangle Style="{StaticResource MyRectangleStyle}"/>
                <Rectangle Style="{StaticResource MyRectangleStyle}"/>
                <Rectangle Style="{StaticResource MyRectangleStyle}"/>
            </ItemsControl>
        </ScrollViewer>

        <!--Create custom class derived from ItemsControl and implement IScrollSnapPointsInfo interface.
            Create custom style for items control and set HorizontalSnapPointsType property on ScrollViewer inside the style.-->
        <!--Height="300" Width="500"   Height="150" Width="250"-->
        <!--VerticalSnapPointsAlignment="Near"
                      VerticalSnapPointsType="MandatorySingle"-->
        <!--ScrollViewer Style="{StaticResource MyVerticalScrollViewerStyle}"-->
        <!--ItemsControl Style="{StaticResource MyItemsControlStyle}"-->
